#include <SoftwareSerial.h>

SoftwareSerial bluetoothSerial(2, 3);  // RX, TX pins for the  Bluetooth module

const int relayPin = 4;  // Pin connected to the relay module

void setup() {
  pinMode(relayPin, OUTPUT);
  digitalWrite(relayPin, LOW);

  Serial.begin(9600);
  bluetoothSerial.begin(9600);
}

void loop() {
  if (bluetoothSerial.available() > 0) {
    char command = bluetoothSerial.read();
    
    if (command == '1') {
      digitalWrite(relayPin, HIGH);  // to Turn ON the device connected to the relay
      bluetoothSerial.println("Device is ON");
    }
    else if (command == '0') {
      digitalWrite(relayPin, LOW);   //to Turn OFF the device connected to the relay
      bluetoothSerial.println("Device is OFF");
    }
  }
}
